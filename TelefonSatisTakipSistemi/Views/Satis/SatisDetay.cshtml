@using TelefonSatisTakipSistemi.Models.Entity
@model List<TBLSATİSDETAY>
@{ ViewBag.Title = "SatisDetay";
   Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<h2 class="mt-4">Satış Detayları</h2>

<table class="table table-hover table-bordered mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Ürün Bilgisi</th>
            <th>Adet</th>
            <th>Birim Fiyat</th>
            <th>Ara Toplam</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
<tr>
    <td>@x.TBLURUNLER.MARKA @x.TBLURUNLER.MODEL</td>
    <td>@x.ADET</td>
    <td>@x.FİYAT ₺</td>
    <td>@(x.ADET * x.FİYAT) ₺</td>
</tr>}
    </tbody>
</table>

<div class="mt-3">
    <a href="/Satis/Index" class="btn btn-info">Satış Listesine Geri Dön</a>
</div>

@model TelefonSatisTakipSistemi.Models.Entity.TBLMUSTERİ
@{
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("MusteriGuncelle", "Musteri", FormMethod.Post))
{
    <h2 class="mt-4">Müşteri Güncelleme</h2>
    @*<label>Müşteri Adı</label>*@
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.AD, new { placeholder = "Adınızı giriniz...", @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.SEHİR, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.TELEFON, new { type = "tel", @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.EPOSTA, new { @class = "form-control" })
    <br />
    @Html.TextAreaFor(x => x.ADRES, new { @clas = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
}


